      "url": "http://localhost:3000",
      "description": "Main Server"
    },
    {
      "url": "http://localhost:3001",
      "description": "MongoDB Server"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Get the login page",
        "responses": {
          "200": {
            "description": "Login page retrieved successfully"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/loadHP": {
      "get": {
        "summary": "Load the Home page with the recent games",
        "responses": {
          "200": {
            "description": "Recent games retrieved successfully"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/loadSq": {
      "get": {
        "summary": "Get historical matches for a squad",
        "parameters": [
          {
            "in": "query",
            "name": "squad",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Name of the squad"
          }
        ],
        "responses": {
          "200": {
            "description": "Squad matches retrieved successfully"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "summary": "Post historical matches for a squad",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "squad": "Real Madrid Club de FÃºtbol"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Squad matches posted successfully"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
