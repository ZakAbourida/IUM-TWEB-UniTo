{
  "openapi": "3.0.2",
  "info": {
    "version": "1.0.0",
    "title": "MongoDBServerDocumentation",
    "description": "Documentation of MongoDB Server",
    "termsOfService": "http://api_url/terms/",
    "contact": {
      "name": "Rabottini_Abourida_Remondino",
